<!DOCTYPE html>
<html>
  <head>
    <title>DailyCents</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700', media: 'all', 'data-turbolink-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
    <script src="https://atrium.mx.com/connect.js"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container">
			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>

      <% if current_user %>
        <%= render 'layouts/sidebar_page' %>
      <% else %>
        <%= yield %>
      <% end %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
